{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["DOM", "ES2021"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // WHY: we want to be able to use dynamic imports that can be loaded by the browser
    // to keep the dev stack slim
    "allowImportingTsExtensions": false,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}